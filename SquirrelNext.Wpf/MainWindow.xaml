<Window x:Class="SquirrelNext.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#DD8858">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Current version</Label>

            <TextBox x:Name="CurrentVersionTextBox"
                     IsReadOnly="True" />

            <Button x:Name="UpdateButton" Click="UpdateButton_Click"
                    Margin="0,15,0,0" IsEnabled="False"
                    Content="Update" />

            <Button Click="CheckForUpdatesButton_Click"
                    Content="Check" />

            <Button Click="SumButton_OnClick"
                    Content="4 + 5" />
        </StackPanel>
    </Grid>
</Window>